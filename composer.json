{
  "name": "woprrr/drupal8-composer-template",
  "description": "A complex template for Drupal 8 with composer management.",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Alexandre Mallet (woprrr)",
      "email": "woprrr.dev@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/woprrr/drupal8-composer-template/issues",
    "docs": "https://github.com/woprrr/drupal8-composer-template/blob/8.2.x/README.md"
  },
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "1.6.0",
    "drupal-composer/drupal-scaffold": "^2.2",
    "fxp/composer-asset-plugin": "^1.4",
    "wikimedia/composer-merge-plugin": "^1.3"
  },
  "require-dev": {
    "drupal-composer/drupal-scaffold": "^2.1.0"
  },
  "conflict": {
    "drupal/core": "7.*"
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin/",
    "fxp-asset": {
      "installer-paths": {
        "npm-asset-library": "web/libraries",
        "bower-asset-library": "web/libraries"
      }
    }
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "enable-patching": true,
    "merge-plugin": {
      "include": [
        "composer.*.json"
      ],
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": true,
      "merge-scripts": true
    },
    "installer-types": [
      "bower-asset",
      "npm-asset"
    ],
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "minimum-stability": "dev"
  },
  "autoload-dev": {
    "psr-4": {
      "Drupal\\Tests\\PHPUnit\\": "tests/phpunit/src/"
    }
  },
  "autoload": {
    "psr-4": {
      "Drupal\\Composer\\Plugins\\": "scripts/Composer"
    }
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "site-install": "Drupal\\Composer\\Plugins\\DrupalInstall::process",
    "site-update": "Drupal\\Composer\\Plugins\\DrupalUpdate::process",
    "export-conf": "Drupal\\Composer\\Plugins\\DrupalExportConf::process",
    "install-phantomjs": [
      "rm -rf vendor/bin/phantomjs",
      "PhantomInstaller\\Installer::installPhantomJS"
    ],
    "post-install-cmd": [
      "@composer install-phantomjs",
      "@composer drupal-scaffold"
    ],
    "nuke": "rm -r -f bin web vendor"
  }
}
